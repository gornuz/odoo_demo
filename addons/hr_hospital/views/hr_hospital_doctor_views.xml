<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor: list -->
    <record id="view_hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="specialization"/>
                <field name="supervisor_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="patient_count"/>
                <field name="visit_count"/>
            </list>
        </field>
    </record>

    <!-- Doctor: form -->
    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action"
                                name="%(action_hr_hospital_patient)d"
                                class="oe_stat_button"
                                icon="fa-user"
                                context="{'search_default_doctor_id': id}">
                            <field name="patient_count" string="Patients"/>
                        </button>
                        <button type="action"
                                name="%(action_hr_hospital_visit)d"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                context="{'search_default_doctor_id': id}">
                            <field name="visit_count" string="Visits"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="specialization"/>
                            <field name="supervisor_id"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids" context="{'default_doctor_id': id}">
                                <list>
                                    <field name="name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="birthdate"/>
                                    <field name="gender"/>
                                </list>
                            </field>
                        </page>
                        <page string="Visits">
                            <field name="visit_ids" context="{'default_doctor_id': id}">
                                <list>
                                    <field name="visit_datetime"/>
                                    <field name="patient_id"/>
                                    <field name="disease_id"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Supervised Doctors">
                            <field name="supervisee_ids" context="{'default_supervisor_id': id}">
                                <list>
                                    <field name="name"/>
                                    <field name="specialization"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
